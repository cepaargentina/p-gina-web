---
import ButtonPrimaryOutline from './ButtonPrimaryOutline.astro'

interface Props {
	title: string
	buttonLabel: string
}

const { title, buttonLabel } = Astro.props
---

<div
	class='bg-white w-[351px] flex flex-col gap-6 items-center px-6 py-7 shadow-lg rounded-2xl h-max'
>
	<div
		class='w-[138px] h-[138px] rounded-[50%] bg-[#E9F2FF] text-secondary flex items-center justify-center'
	>
		<slot name='card-svg' />
	</div>

	<h3 class='font-semibold text-h3 text-secondary'>{title}</h3>

	<p class='text-center text-[#505050] text-p'>
		<slot name='card-description' />
	</p>

	<ButtonPrimaryOutline label={buttonLabel} />
</div>
